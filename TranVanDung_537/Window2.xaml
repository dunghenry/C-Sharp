<Window x:Class="TranVanDung_537.Window2"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TranVanDung_537"
        mc:Ignorable="d"
        Title="Window2" Height="450" Width="800" WindowStartupLocation="CenterScreen">
    <Grid>
        <DataGrid x:Name="dgList" Width="700" Height="150" HorizontalAlignment="Center" VerticalAlignment="Center" Margin="0,20,0,0"
                  IsReadOnly="True" CanUserReorderColumns="False" CanUserResizeColumns="False" CanUserDeleteRows="False" AutoGenerateColumns="False" CanUserResizeRows="False" 
                  ScrollViewer.CanContentScroll="True" ScrollViewer.HorizontalScrollBarVisibility="Auto" ScrollViewer.VerticalScrollBarVisibility="Auto">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Mã phòng" Width="*" Binding="{Binding MaPhong}"/>
                <DataGridTextColumn Header="Tên phòng" Width="*" Binding="{Binding TenPhong}"/>
                <DataGridTextColumn Header="Số lượng nhân viên" Width="*" Binding="{Binding SoLuong}"/>
                <DataGridTextColumn Header="Tổng lương" Width="*" Binding="{Binding TongLuong}"/>
            </DataGrid.Columns>
        </DataGrid>
        
    </Grid>
</Window>
