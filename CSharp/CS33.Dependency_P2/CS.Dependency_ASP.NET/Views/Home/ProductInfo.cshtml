@model Product
<h1>Thong tin san pham</h1>
@if(Model == null){
    <div class="alert alert-danger">Khong tim thay san pham</div>
}
else{
    <div class="card">
        <div class="card-body">
            <p>Tên sản phẩm: <strong>@Model.Name</strong></p>
            <p>Giá sản phẩm: @Model.Price</p>
        </div>
    </div>
}